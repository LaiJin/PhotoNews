<meta name="viewport" content="width=device-width initial-scale=1 maximum-scale=1 user-scalable=0" />
<% if @detail_photos %>
    <% @detail_photos.each do |detail_photo| %>
        <div class="col-xs-12 col-md-8" style="background: #F5F5F5; padding: 10px; margin: 10px 5% 5px 5%">
          <div class="media">
            <a class="pull-left" href="#">
              <img class="media-object" src="<%= detail_photo.photo.url(:small) %>" alt="...">
            </a>
            <div class="media-body">
              <%= detail_photo.content %>
            </div>
          </div>
        </div>
    <% end %>
<% end %>
<div class="col-xs-12 col-md-8" style="background: #F5F5F5; padding: 10px; margin: 10px 5% 5px 5%">
  <div style="margin: auto 20% auto 20%">
    <%= form_for @detail_photo, :url =>{:action => 'upload_detail_photo'}, :html => {:multipart => true} do |f|  %>
        <p>请选择图片：</p>
        <%= f.file_field :photo%>
        <div style="margin: 20px auto 20px auto">
          <p style="font-size: 20px">内容：</p>
          <%= f.text_area :content, :class => 'form-control', :style => 'height: 200px'%>
        </div>
        <%= render 'shared/flash_message'%>
        <%= f.submit '上传', :class => 'btn btn-default', :style => 'margin: auto auto auto 20%; width: 80px' %>
        <%= f.submit '完成', :class => 'btn btn-default', :style => 'margin: auto auto auto 20%; width: 80px' %>
    <% end %>
  </div>
</div>
