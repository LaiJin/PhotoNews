<meta id="viewport" name="viewport" content="width=device-width initial-scale=1 maximum-scale=1 user-scalable=0" />
<ol class="breadcrumb" style="margin-right: px; margin-top: 20px">
  <li class="active">首页</li>
  <a class="btn btn-default" style="margin-left: 80%" href="image_upload_view">添加</a>
</ol>
<% @all_image_news.each do |image_news| %>
    <div class="col-xs-12 col-md-8" style="background: #F5F5F5; padding: 10px; margin: 10px 5% 5px 5%">
      <div class="media">
        <a class="pull-left" href="#">
          <img class="media-object" src="<%= image_news.image.url(:small) %>." alt="...">
        </a>
        <div class="media-body">
          <%= image_news.content %>
        </div>
      </div>
      <div class="text-right">
        <%= link_to '查看正文', show_detailed_image_news_view_path(:image_news_id => image_news.id)%>
        <% if current_user && current_user.isAdmin %>
        <%= link_to '删除', delete_image_news_path(:image_news_id => image_news.id), :method => 'delete', :confirm => '确认删除吗？' %>
        <% end %>
      </div>
    </div>
<% end %>
