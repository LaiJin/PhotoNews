<div style="background: #F5F5F5; padding: 50px; margin: 100px 300px 100px 300px">
  <%= form_for @image_news, :url =>{:action => 'upload'}, :html => {:multipart => true} do |f|  %>
      <p>请选择图片：</p>
      <%= f.file_field :image%>
      <div style="margin: 20px auto 20px auto">
      <p style="font-size: 20px">内容：</p>
      <%= f.text_area :content, :class => 'form-control', :style => 'height: 200px'%>
      </div>
      <%= f.submit '上传' %>
  <% end %>
</div>
